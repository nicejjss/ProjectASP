@model ProductViewModel

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="app__container">
    <div class="grid wide">
        <div class="banner">
            <div class="banner-content">
                <div class="banner-left">
                    <div class="banner-left-content">
                        <div class="grid banner-left-content__top">
                            <a href="" class="banner-left-content__top-link">
                                <div class="banner-home__content-left-container" style="">
                                    <div class="banner-home__content-left-container-text">
                                        <h1 class="banner-home__content-left-title">Mua sản phẩm có giảm giá tại F4
                                            SHOP
                                        </h1>
                                        <p class="banner-home__content-left-desc">Lorem ipsum dolor sit, amet
                                            consectetur
                                            adipisicing elit.
                                            Asperiores nam numquam deserunt atque soluta quod.
                                        </p>
                                        <button class="banner-home__content-left-btn">Xem ngay</button>
                                    </div>
                                    <div class="banner-home__content-left-container-img">
                                        <img width="200" src="~/img/iphone_12.png" alt="">
                                    </div>
                                </div>
                            </a>
                            <a href="" class="banner-left-content__top-link">
                                <div class="banner-home__content-left-container" style="">
                                    <div class="banner-home__content-left-container-text">
                                        <h1 class="banner-home__content-left-title">Mua sản phẩm khuyến mãi tại F4
                                            SHOP
                                        </h1>
                                        <p class="banner-home__content-left-desc">Lorem ipsum dolor sit, amet
                                            consectetur
                                            adipisicing elit.
                                            Asperiores nam numquam deserunt atque soluta quod.
                                        </p>
                                        <button class="banner-home__content-left-btn">Xem ngay</button>
                                    </div>
                                    <div class="banner-home__content-left-container-img">
                                        <img width="200" src="~/img/sac_du_phong.png" alt="">
                                    </div>
                                </div>
                            </a>
                            <a href="" class="banner-left-content__top-link">
                                <div class="banner-home__content-left-container" style="">
                                    <div class="banner-home__content-left-container-text">
                                        <h1 class="banner-home__content-left-title">Mua sản phẩm có giảm giá tại F4
                                            SHOP
                                        </h1>
                                        <p class="banner-home__content-left-desc">Lorem ipsum dolor sit, amet
                                            consectetur
                                            adipisicing elit.
                                            Asperiores nam numquam deserunt atque soluta quod.
                                        </p>
                                        <button class="banner-home__content-left-btn">Xem ngay</button>
                                    </div>
                                    <div class="banner-home__content-left-container-img">
                                        <img width="200" src="~/img/tai_nghe.png" alt="">
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="banner-left-content__bottom">
                            <div class="banner-left-content__bottom-pagination">
                                @* <div class=""></div>
                                <div class=""></div>
                                <div class=""></div> *@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="banner-right">
                    <div class="grid">
                        <img class="banner-home__content-right-img" src="~/img/ngat_ngay.jpg" alt="">
                    </div>
                    <div class="grid">
                        <img class="banner-home__content-right-img" src="~/img/banner_my_pham.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="category">
            <div class="category-header">
                <div class="category-header__title">Danh mục</div>
                <div class="category-header__arrow">
                    <i class="fa-solid fa-arrow-left"></i>
                    <i class="fa-solid fa-arrow-right"></i>
                </div>
            </div>
            <div class="category-container">
                <div class="category-content">
                    <ul class="row sm-gutter category-list">
                        @foreach (var category in Model.Categories) {
                            <li class="category-item-home">
                                <a href="/Product/Index?categoryID=@category.PK_iCategoryID" class="category-item-link">
                                    <div class="category-item__img" style="background-image: url(/img/category/@category.sCategoryImage);">
                                    </div>
                                    <div class="category-item__name">@category.sCategoryName</div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="success">
            <div class="success-header">
                <div class="success-title">Gợi ý hôm nay</div>
            </div>
            <div class="success-container">
                <div class="home-product">
                    <div class="row sm-gutter">
                        @foreach (var product in Model.Products) {
                            <div class="col l-2 c-6 m-4">
                                <a class="home-product-item" href="/Product/Detail/@product.PK_iProductID">
                                    <div class="home-product-item__img"
                                        style="background-image: url(/img/@product.sImageUrl)"></div>
                                    <h4 class="home-product-item__name">@product.sProductName</h4>
                                    <div class="home-product-item__price">
                                        <span class="home-product-item__price-old">1.200 000đ</span>
                                        <span class="home-product-item__price-current">@product.dPrice đ</span>
                                    </div>
                                    <div class="home-product-item__action">
                                        <span class="home-product-item__like home-product-item__like--liked">
                                            <i class="home-product-item__like-icon-empty far fa-heart"></i>
                                            <i class="home-product-item__like-icon-fill fas fa-heart"></i>
                                        </span>
                                        <div class="home-product-item__rating">
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <span class="home-product-item__sold"> 88 Đã bán</span>
                                    </div>
                                    <div class="home-product-item__origin">
                                        <span class="home-product-item__brand">Who</span>
                                        <span class="home-product-item__origin-name">Nhật Bản</span>
                                    </div>
                                    <div class="home-product-item__favourite">
                                        <i class="fas fa-check"></i>
                                        <span>Yêu thích</span>
                                    </div>
                                    <div class="home-product-item__sale-off">
                                        <span class="home-product-item__sale-off-percent">53%</span>
                                        <span class="home-product-item__sale-off-label">GIẢM</span>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <ul class="pagination home-product__pagination">
                    @if (Model.CurrentPage > 1) {
                        <li class="pagination-item">
                            <a href="/Home/Index?currentPage=@(Model.CurrentPage - 1)" class="pagination-item__link">
                                <i class="pagination-item__icon fas fa-angle-left"></i>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPage; i++) {
                        @if (i == Model.CurrentPage) {
                            <li class="pagination-item pagination-item--active">
                                <a href="/Home/Index?currentPage=@i" class="pagination-item__link">@i</a>
                            </li>
                        } else {
                            <li class="pagination-item">
                                <a href="/Home/Index?currentPage=@i" class="pagination-item__link">@i</a>
                            </li>
                        }
                    }
                    @* <li class="pagination-item">
                        <a href="" class="pagination-item__link">...</a>
                    </li> *@
                    @if (Model.CurrentPage < Model.TotalPage) {
                        <li class="pagination-item">
                            <a href="/Home/Index?currentPage=@(Model.CurrentPage + 1)" class="pagination-item__link">
                                <i class="pagination-item__icon fas fa-angle-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>



