@model List<User>


    
<form asp-controller="User" asp-action="Search" method="post">
    <label>Nhập từ khóa:</label>
    <input placeholder="Từ khóa tìm kiếm...">
    <button type="submit">Tìm kiếm</button>
</form>

<table>
    


    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Address</td>
        <td>Email</td>
        <td>RoleID</td>
        <td>DateBirth</td>
        <td>Phone</td>
        <td>CreatedTime</td>
        <td>UpdatedTime</td>
        <td>DeletedTime</td>
    </tr>

    @foreach(User user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Name</td>
            <td>@user.Address</td>
            <td>@user.Email</td>
            <td>@user.RoleID</td>
            <td>@user.DateBirth</td>
            <td>@user.Phone</td>
            <td>@user.CreatedTime</td>
            <td>@user.UpdatedTime</td>
            <td>@user.DeletedTime</td>
        </tr>
    }
</table>